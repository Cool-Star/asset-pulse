{
  "name": "asset-pulse",
  "version": "1.0.0",
  "description": "AssetPulse",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run dev:vue & npm run dev:electron",
    "build": "npm run build:vue && npm run build:electron && electron-builder",
    "build:mac": "npm run build:vue && npm run build:electron && electron-builder --mac",
    "build:win": "npm run build:vue && npm run build:electron && electron-builder --win",
    "dev:vue": "vite",
    "dev:electron": "nodemon",
    "build:vue": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "generate:icon": "electron scripts/generate-icon.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "vue",
    "typescript",
    "vite"
  ],
  "author": "xiaoxing",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "38.2.1",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "nodemon": "^3.1.10",
    "prebuild-install": "^7.1.3",
    "sass": "^1.93.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue": "^3.3.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.0",
    "echarts": "^6.0.0",
    "element-plus": "^2.11.5",
    "form-data": "^4.0.5",
    "https-proxy-agent": "^7.0.6",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.22",
    "vue": "^3.3.8",
    "vue-router": "^4.5.1"
  },
  "build": {
    "appId": "com.assetpulse.app",
    "productName": "AssetPulse",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "resources/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
